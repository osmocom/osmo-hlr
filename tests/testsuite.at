AT_INIT
AT_BANNER([Regression tests.])

AT_SETUP([auc])
AT_KEYWORDS([auc])
cat $abs_srcdir/auc/auc_test.ok > expout
cat $abs_srcdir/auc/auc_test.err > experr
AT_CHECK([$abs_top_builddir/tests/auc/auc_test], [], [expout], [experr])
AT_CLEANUP

